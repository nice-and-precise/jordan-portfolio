{
    "hosting": {
        "public": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "_legacy/**",
            "docs/**",
            "*.md",
            "package.json",
            "package-lock.json",
            "serviceAccountKey.json"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=3600"
                    }
                ]
            }
        ]
    }
}