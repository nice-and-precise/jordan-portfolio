rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Projects Collection
    match /projects/{projectId} {
      allow read: if true; // Public read access
      allow write: if isAuthenticated(); // Only authenticated users can edit
    }

    // Outcomes Collection
    match /outcomes/{outcomeId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Posts Collection (Writing)
    match /posts/{postId} {
        allow read: if true;
        allow write: if isAuthenticated();
    }

    // Inquiries Collection (Contact Form)
    match /inquiries/{inquiryId} {
        allow create: if true; // Public can submit
        allow read, update, delete: if isAuthenticated();
    }

    // Settings Collection (Global Config)
    match /settings/{settingId} {
        allow read: if true;
        allow write: if isAuthenticated();
    }
  }
}
